#!/usr/bin/env ruby

require 'telegram/bot'

require './lib/message_responder'
require './lib/app_configurator'
require './lib/yaml_parser'
require './lib/request'

config = AppConfigurator.new

token = config.get_token
logger = config.get_logger

logger.debug 'Starting telegram bot'

Telegram::Bot::Client.run(token) do |bot|
	# 184164761
	# 105879286

	infinite_loop = Thread.new {
		loop do
			unless request.between?(943, 963)
				5.times do
					bot.api.send_message(chat_id: '-184164761', text: "Быстро перейдите на #{Configurations::URL}, регистрация скорее всего началась!!!")
				end
			end
			sleep(60)
		end
	}

  bot.listen do |message|
		puts message.chat.id

    logger.debug "@#{message.from.username}: #{message.text}"
    MessageResponder.new({bot: bot, message: message}).respond
  end

end
